<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context="com.example.adminqe.SignActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/imageView3"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginTop="32dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/bg" />

        <TextView
            android:id="@+id/textView6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:fontFamily="@font/josefinsansbold"
            android:text="Waves Of Food"
            android:textColor="@color/red"
            android:textSize="40sp"
            app:layout_constraintEnd_toEndOf="@+id/imageView3"
            app:layout_constraintStart_toStartOf="@+id/imageView3"
            app:layout_constraintTop_toBottomOf="@+id/imageView3" />

        <TextView
            android:id="@+id/textView7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:fontFamily="@font/josefinsanssembold"
            android:text="Sign up here for Your"
            android:textColor="@color/red"
            android:textSize="16dp"
            app:layout_constraintEnd_toEndOf="@+id/textView6"
            app:layout_constraintStart_toStartOf="@+id/textView6"
            app:layout_constraintTop_toBottomOf="@+id/textView6" />

        <TextView
            android:id="@+id/textView8"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_marginTop="8dp"
            android:fontFamily="@font/josefinsanssembold"
            android:text="Admin Dashboard"
            android:textColor="@color/red"
            android:textSize="20sp"
            app:layout_constraintEnd_toEndOf="@+id/textView7"
            app:layout_constraintStart_toStartOf="@+id/textView7"
            app:layout_constraintTop_toBottomOf="@+id/textView7" />

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/textInputLayout"
            style="@style/Widget.Material3.TextInputLayout.OutlinedBox.Dense.ExposedDropdownMenu"
            android:layout_width="325dp"
            android:layout_height="57dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="15dp"
            android:layout_marginEnd="16dp"
            android:background="@drawable/text_view_bg"
            android:elevation="4dp"
            app:boxStrokeWidth="0dp"
            app:boxStrokeWidthFocused="0dp"
            app:endIconDrawable="@drawable/location_icon"
            app:endIconTint="@color/black"
            app:layout_constraintEnd_toEndOf="@+id/textView8"
            app:layout_constraintStart_toStartOf="@+id/textView8"
            app:layout_constraintTop_toBottomOf="@+id/textView8">

            <AutoCompleteTextView
                android:id="@+id/listLocation"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="3dp"
                android:background="@color/white"
                android:fontFamily="@font/josefinsanssembold"
                android:inputType="none"
                android:text="Choose Location" />

        </com.google.android.material.textfield.TextInputLayout>

        <EditText
            android:id="@+id/edtOwnerName"
            android:layout_width="325dp"
            android:layout_height="57dp"
            android:layout_marginTop="8dp"
            android:background="@drawable/text_view_bg"
            android:drawableLeft="@drawable/baseline_person_outline_24"
            android:drawablePadding="15dp"
            android:elevation="5dp"
            android:ems="10"
            android:fontFamily="@font/josefinsansregular"
            android:hint="Name of owner"
            android:paddingStart="15dp"
            app:layout_constraintEnd_toEndOf="@+id/textInputLayout"
            app:layout_constraintStart_toStartOf="@+id/textInputLayout"
            app:layout_constraintTop_toBottomOf="@+id/textInputLayout" />

        <EditText
            android:id="@+id/edtRestaurantName"
            android:layout_width="325dp"
            android:layout_height="57dp"
            android:layout_marginTop="8dp"
            android:background="@drawable/text_view_bg"
            android:drawableLeft="@drawable/baseline_person_outline_24"
            android:drawablePadding="15dp"
            android:elevation="5dp"
            android:ems="10"
            android:fontFamily="@font/josefinsansregular"
            android:hint="Name of Restaurant"
            android:paddingStart="15dp"
            app:layout_constraintEnd_toEndOf="@+id/edtOwnerName"
            app:layout_constraintStart_toStartOf="@+id/edtOwnerName"
            app:layout_constraintTop_toBottomOf="@+id/edtOwnerName" />

        <EditText
            android:id="@+id/edtEmailAddress"
            android:layout_width="325dp"
            android:layout_height="57dp"
            android:layout_marginTop="8dp"
            android:background="@drawable/text_view_bg"
            android:drawableStart="@drawable/baseline_email_24"
            android:drawablePadding="15dp"
            android:elevation="5dp"
            android:ems="10"
            android:fontFamily="@font/josefinsansregular"
            android:hint="Email"
            android:inputType="textEmailAddress"
            android:paddingLeft="15dp"
            app:layout_constraintEnd_toEndOf="@+id/edtRestaurantName"
            app:layout_constraintStart_toStartOf="@+id/edtRestaurantName"
            app:layout_constraintTop_toBottomOf="@+id/edtRestaurantName" />

        <EditText
            android:id="@+id/edtTextPassword"
            android:layout_width="325dp"
            android:layout_height="57dp"
            android:layout_marginTop="16dp"
            android:background="@drawable/text_view_bg"
            android:drawableStart="@drawable/baseline_lock_open_24"
            android:drawablePadding="15dp"
            android:elevation="5dp"
            android:ems="10"
            android:fontFamily="@font/josefinsansregular"
            android:hint="Password"
            android:inputType="textPassword"
            android:paddingStart="15dp"
            app:layout_constraintEnd_toEndOf="@+id/edtEmailAddress"
            app:layout_constraintStart_toStartOf="@+id/edtEmailAddress"
            app:layout_constraintTop_toBottomOf="@+id/edtEmailAddress" />

        <TextView
            android:id="@+id/textView15"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="@string/or"
            app:layout_constraintEnd_toEndOf="@+id/edtTextPassword"
            app:layout_constraintStart_toStartOf="@+id/edtTextPassword"
            app:layout_constraintTop_toBottomOf="@+id/edtTextPassword" />

        <TextView
            android:id="@+id/textView17"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/josefinsanssembold"
            android:text="Sign Up With"
            android:textSize="14sp"
            app:layout_constraintEnd_toEndOf="@+id/textView15"
            app:layout_constraintStart_toStartOf="@+id/textView15"
            app:layout_constraintTop_toBottomOf="@+id/textView15" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btnFacebook"
            android:layout_width="152dp"
            android:layout_height="57dp"
            android:layout_marginTop="16dp"
            android:background="@drawable/white_button_bg"
            android:drawableStart="@drawable/facebook_logo"
            android:fontFamily="@font/josefinsanssembold"
            android:paddingStart="15dp"
            android:text="Facebook"
            android:textAllCaps="false"
            app:layout_constraintEnd_toStartOf="@+id/btnGoogle"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView17" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btnGoogle"
            android:layout_width="152dp"
            android:layout_height="57dp"
            android:layout_marginTop="16dp"
            android:background="@drawable/white_button_bg"
            android:drawableStart="@drawable/google_logo"
            android:fontFamily="@font/josefinsanssembold"
            android:paddingStart="15dp"
            android:text="Google"
            android:textAllCaps="false"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toEndOf="@+id/btnFacebook"
            app:layout_constraintTop_toBottomOf="@+id/textView17" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btnCreateAccount"
            android:layout_width="157dp"
            android:layout_height="57dp"
            android:layout_marginTop="16dp"
            android:background="@drawable/button_bg"
            android:fontFamily="@font/josefinsanssembold"
            android:text="Create Account"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:textSize="16sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/btnGoogle" />

        <TextView
            android:id="@+id/txtAlreadyAccount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="80dp"
            android:layout_marginBottom="32dp"
            android:fontFamily="@font/josefinsanssembold"
            android:text="Already  have an account ?"
            android:textColor="@color/red"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/btnCreateAccount" />

        <TextView
            android:id="@+id/txtLogin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:fontFamily="@font/josefinsansbold"
            android:text="Log In"
            android:textColor="@color/black"
            app:layout_constraintBottom_toBottomOf="@+id/txtAlreadyAccount"
            app:layout_constraintStart_toEndOf="@+id/txtAlreadyAccount" />

    </androidx.constraintlayout.widget.ConstraintLayout>



</ScrollView>